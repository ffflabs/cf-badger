{
  "name": "@ffflabs/cf-badger",
  "version": "1.0.0",
  "description": "Safe status badges for private repos, running on Cloudflare Workers",
  "module": "dist/index.mjs",
  "main": "dist/index.mjs",
  "types": "types/main.d.ts",
  "type": "module",
  "scripts": {
    "deploy": "yarn yt &&  yarn write_commit && yarn eslint && yarn transpile && wrangler publish",
    "tail": "wrangler tail --format=pretty",
    "dev": "wrangler dev --env=dev",
    "format": "prettier --write '**/*.{ts,js,css,json,md}'",
    "eslint": "eslint --ext js --ext ts --ignore-path .eslintignore src/*.ts src/modules/*.ts",
    "allexport": " set -o allexport; source .env; set +o allexport",
    "localtest": "yarn allexport;yarn test",
    "test": "cp wrangler.example.toml wrangler.toml && wrangler build && node  --experimental-vm-modules `yarn bin`/ava --verbose test/handler.test.mjs ",
    "start":"node  --experimental-vm-modules mf.mjs ",
    
    "build": "rm -rf dist/* && esbuild src/index.ts --sourcemap --format=esm --bundle --outfile=dist/index.mjs",
    "build:pre":"yarn yt &&  yarn write_commit",
    "ty": "echo 'cat wrangler.toml | yj -ty > wrangler.yaml'",
    "write_commit": "COMMIT=`git rev-parse --short HEAD` sed -i \"s/_RELEASE_/$COMMIT/g\" wrangler.toml",
    "yt": "cat wrangler.yaml | yj -yt -i > wrangler.toml",
    "miniflare": "  NODE_ENV=development miniflare dist/index.mjs -c ./wrangler.toml -w  -d -o Badger=Badger --wrangler-env=dev ",
    "transpile": "tsc --project ./tsconfig.json",
    "act": "yarn allexport; act push -s PERSONAL_GITHUB_TOKEN=$GITHUB_TOKEN -j test --reuse"
  },
  "author": "author",
  "license": "MIT OR Apache-2.0",
  "devDependencies": {
    "@ava/typescript": "^2.0.0",
    "@babel/core": "7",
    "@babel/eslint-parser": "^7.12.1",
    "@cloudflare/workers-types": "^2.0.0",
    "@sentry/node": "^6.2.0",
    "@types/chai": "^4.2.11",
    "@types/mime": "^2.0.3",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.31",
    "@types/node-fetch": "^2.5.8",
    "@types/service-worker-mock": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "ava": "^3.15.0",
    "esbuild": "^0.12.22",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-security": "^1.4.0",
    "miniflare": "~1.4.1",
    "prettier": "^2.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.1.3",
    "itty-durable": "^0.4.0",
    "itty-router": "^2.4.2",
    "itty-router-extras": "^0.4.2",
    "mime": "^2.5.2",
    "toucan-js": "^2.5.0"
  }
}
